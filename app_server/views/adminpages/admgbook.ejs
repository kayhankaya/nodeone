<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Subject</th>
        <th scope="col">Message</th>
        <th scope="col">Confirm</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% for(var i = 0;i < books.length;i++){ %>

    <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= books[i].name %></td>
        <td><%= books[i].email %></td>
        <td><%= books[i].subject %></td>
        <td><%= books[i].messages %></td>
        <td><%= books[i].confirm %></td>
        <td>

            <button type="button" class="btn btn-amber myModalButton" data-toggle="modal" data-target="myModal-<%= books[i].id %>">
                Confirm
            </button>
            <div class="modal fade" id="myModal-<%= books[i].id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Confirm Guest Book</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to approve guest comment?
                        </div>
                        <div class="modal-footer">
                            <form action="/admin/gbookconf/<%= books[i].id %>" method="post">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary" value="gbookconf">Confirm</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </td>
    </tr>
    <% } %>
    </tbody>
</table>